{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spanda.dev/schemas/knowledge-event.json",
  "title": "Knowledge Event",
  "description": "Knowledge events emitted by second-brain package",
  "allOf": [{ "$ref": "event.json" }],
  "properties": {
    "event_type": {
      "enum": [
        "knowledge.note_created",
        "knowledge.note_updated",
        "knowledge.fused",
        "knowledge.integrated",
        "knowledge.pattern_recognized",
        "knowledge.capture_processed"
      ]
    },
    "payload": {
      "type": "object",
      "properties": {
        "note_path": {
          "type": "string"
        },
        "note_type": {
          "type": "string",
          "enum": ["permanent", "reference", "project", "area", "capture"]
        },
        "links_count": {
          "type": "integer"
        },
        "fusion_sources": {
          "type": "array",
          "items": { "type": "string" }
        },
        "pattern_id": {
          "type": "string"
        },
        "pattern_description": {
          "type": "string"
        },
        "integration_decision": {
          "type": "string",
          "enum": ["MERGE", "LINK", "MULTI-PATH", "CREATE_NEW"]
        }
      }
    }
  }
}
